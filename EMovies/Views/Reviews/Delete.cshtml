@model EMovies.Models.Review

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Review</h1>

<h3 class="text-center text-danger">Are you sure you want to delete this?</h3>

<<div class="row">
    <div class="col-md-8 offset-2">

        <div class="row">
            <div class="col-md-8 offset-2">

<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">Movie Name : @Html.DisplayFor(model => model.Movie.MovieName)</h5>
                <p class="card-text">@Html.DisplayFor(model => model.ReviewDescription)</p>
                <p class="card-text"><small class="text-muted">@Html.DisplayFor(model => model.StarRating) Star Rating</small></p>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ReviewId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <span style="padding:5px"></span>
        <a asp-action="AllReviews" class="btn btn-dark">View All Reviews</a>
   
</form>
</div>
</div>
</div>
</div>




