@model IEnumerable<EMovies.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">List Of Categories</h1>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-success" asp-action="Create">Create New Category</a>
    </p>
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2">
<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.CategoryId">Edit</a> 
                <span style="padding:5px"></span>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CategoryId">Delete</a>
            </td>
}
else{
    <td></td>
}
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>