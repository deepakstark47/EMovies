@model EMovies.Models.Actor

@{
    ViewData["Title"] = "Edit Actor";
}


<div class="row text">
    <div class="col-md-8 offset-2">

<h1 class="text-center">Edit Actor</h1>


<hr />
<div class="row">
            <div class="col-md-8 offset-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActorId" />
            <div class="form-group text-center">
            <img id="ProfilePicturePreview"  class="border-info rounded-circle" style="max-width: 150px" />
            </div>
  
            <div class="form-group">
                <label asp-for="ProfilePictureUrl" class="control-label"></label>
                <input asp-for="ProfilePictureUrl" class="form-control" />
                <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActorName" class="control-label"></label>
                <input asp-for="ActorName" class="form-control" />
                <span asp-validation-for="ActorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biography" class="control-label"></label>
                <input asp-for="Biography" class="form-control" />
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
          <span style="padding:5px"></span>
        <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary float-end" />
          <span style="padding:5px"></span>
                <a class="btn btn-dark"  asp-action="Index">Show All Actors</a>
            
            </div>
        
        </form>
    </div>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureUrl").val();
        })

        $("#ProfilePictureUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })

 </script>
}
