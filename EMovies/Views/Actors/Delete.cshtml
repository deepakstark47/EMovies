@model EMovies.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<h1>Delete Actor @Model.ActorName</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProfilePictureUrl)
        </dt>
        <dd class = "col-sm-10">
           <img src=@Model.ProfilePictureUrl  alt=@Model.ActorName class="rounded-circle" style="max-width:150px;">
       
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Biography)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Biography)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ActorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
      <a asp-action="Index">Display All Actors</a>
    </form>
</div>
