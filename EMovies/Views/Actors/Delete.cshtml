@model EMovies.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<h1 class="text-center">Delete Actor </h1>
<hr/>
<h3 class="text-danger text-center">Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-8 offset-2">

        <div class="row">
            <div class="col-md-8 offset-2">

                <h1 class="text-center">Actor Details</h1>
                <hr />
                <div class="card mb-4" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src=@Model.ProfilePictureUrl class="card-img" alt=@Model.ActorName style="max-width:150px;">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(model => model.ActorName)</h5>
                                <p class="card-text">@Html.DisplayFor(model => model.Biography)</p>
                            </div>
                        </div>
                    </div>
                </div>

         <form asp-action="Delete">
        <input type="hidden" asp-for="ActorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
      <a asp-action="Index" class="btn btn-dark">Display All Actors</a>
    </form>
</div>
</div>
</div>
</div>